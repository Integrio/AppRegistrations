<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>EntraAppRegistration</PackageId>
    <Version>1.0.0</Version>
    <Authors>Mattias Hammarsten, Timothy Lindberg</Authors>
    <Company>Integrio Intropy</Company>
    <Description>PowerShell module for managing Entra App Registrations, Client Apps, and Managed Identity Role assignments</Description>
    <!-- This ensures files are packed correctly -->
    <ContentTargetFolders>content</ContentTargetFolders>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
  </PropertyGroup>

  <ItemGroup>
    <!-- Include all PowerShell files -->
    <Content Include=".\*.ps*1">
      <PackagePath>content\EntraAppRegistration</PackagePath>
    </Content>
  </ItemGroup>
</Project>